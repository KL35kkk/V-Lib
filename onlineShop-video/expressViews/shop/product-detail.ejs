<%- include('../sharedViews/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../sharedViews/navigation.ejs') %>
    <main class="centered">
        <h1><%= product.title %></h1>
        <hr>
        <div class="image">
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <h2><%= product.price %></h2>
        <p><%= product.description %></p>

        <%- include('../sharedViews/add-to-cart.ejs'), {product: product} %>

    </main>

<%- include('../sharedViews/end.ejs') %>